<!--pages/tool/map/map.wxml-->
<view class="container">
    <text class="title">地图</text>
    <view>
        <map id="myMap" latitude="{{latitude}}" longitude="{{longitude}}" show-location></map>
    </view>
    <view class="btn">
        <button class="butt" size="mini" bindtap="myLocation">我的位置</button>
        <button class="butt" size="mini" bindtap="openLocation">打开位置</button>
    </view>
</view>